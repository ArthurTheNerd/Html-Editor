<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Fixed Live HTML Editor Layout</title>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Fira+Mono&display=swap');

  html, body {
    margin: 0; padding: 0; height: 100%;
    font-family: 'Fira Mono', monospace;
    background: #121212;
    color: #eee;
    overflow: hidden;
  }

  #container {
    display: flex;
    height: 100vh;
    width: 100vw;
  }

  /* Editor side */
  #editorWrapper {
    width: 50%;
    background: #1e1e1e;
    display: flex;
    height: 100%;
  }

  #lineNumbers {
    background: #2b2b2b;
    color: #666;
    padding: 10px 10px 10px 10px;
    text-align: right;
    user-select: none;
    font-size: 14px;
    line-height: 1.4;
    width: 40px;
    overflow: hidden;
    white-space: nowrap;
  }

  #editorContainer {
    position: relative;
    flex-grow: 1;
    height: 100%;
  }

  #editor {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background: #1e1e1e;
    color: #eee;
    font-family: inherit;
    font-size: 16px;
    line-height: 1.4;
    padding: 10px;
    border: none;
    resize: none;
    outline: none;
    overflow: auto;
    tab-size: 2;
  }

  /* Preview side */
  #previewWrapper {
    width: 50%;
    background: black;
  }

  #preview {
    width: 100%;
    height: 100vh;
    border: none;
  }

  /* Export button */
  #exportBtn {
    position: absolute;
    top: 10px;
    right: 15px;
    background: #0E639C;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 14px;
    font-weight: bold;
    cursor: pointer;
    font-family: inherit;
    z-index: 100;
  }
  #exportBtn:hover {
    background: #1177DD;
  }
</style>
</head>
<body>

<div id="container">
  <div id="editorWrapper">
    <div id="lineNumbers">1</div>
    <div id="editorContainer">
      <textarea id="editor" spellcheck="false" aria-label="HTML editor" autofocus>
<!DOCTYPE html>
<html>
<head><title>Test</title></head>
<body>
  <h1>Hello from live editor!</h1>
  <p>Try editing this HTML code on the left.</p>
</body>
</html>
      </textarea>
      <button id="exportBtn" title="Download HTML file">Export</button>
    </div>
  </div>
  <div id="previewWrapper">
    <iframe id="preview" sandbox="allow-scripts allow-same-origin"></iframe>
  </div>
</div>

<script>
  const editor = document.getElementById('editor');
  const lineNumbers = document.getElementById('lineNumbers');
  const preview = document.getElementById('preview');
  const exportBtn = document.getElementById('exportBtn');

  function updateLineNumbers() {
    const linesCount = editor.value.split('\n').length;
    let numbers = '';
    for(let i=1; i <= linesCount; i++) {
      numbers += i + '\n';
    }
    lineNumbers.textContent = numbers;
  }

  function updatePreview() {
    preview.srcdoc = editor.value;
  }

  editor.addEventListener('input', () => {
    updateLineNumbers();
    updatePreview();
  });

  // Sync scroll line numbers with textarea scroll
  editor.addEventListener('scroll', () => {
    lineNumbers.scrollTop = editor.scrollTop;
  });

  exportBtn.addEventListener('click', () => {
    const blob = new Blob([editor.value], {type: 'text/html'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'index.html';
    a.click();
    URL.revokeObjectURL(url);
  });

  // Initialize on load
  updateLineNumbers();
  updatePreview();
</script>

</body>
</html>
